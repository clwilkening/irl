<% include ../partials/head.ejs %>
<title>Profiles</title>
</head>
  <body>
    <div class="row">
      <h1 class="col s4 offset-s1"><%= title %></h1>
    </div>
    <div class="collection">
    <% users.forEach(function(user) { %>
      <div class="collection-item center blue-grey lighten-1">
        <span><a class="white-text" href="<%= '/profiles/' + user.id %>"><%= user.firstName %><span><%= user.age %><%= user.gender %></a></span>
         <a href='<%= `/composemessage/${user.id}` %> ' <button class="btn" type="submit">Message</button></a>
      </div>
    <% }) %>
    </div>

  </body>
</html>



