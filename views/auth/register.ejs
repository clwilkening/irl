<% include ../partials/head.ejs %>

<title>Register</title>

  <body>
    <% include ../partials/header.ejs %>
    <main>
      <div class="container">
        <div class="row form">
          <form class="col s10 offset-s1" id="form-font" action="/auth/register" method="post">
            <div class="col s6">
              <label>Username:</label>
              <input type="text" name="username"/>
            </div>
             <div class="col s6">
              <label>Password:</label>
              <input type="password" name="password"/>
            </div>
            <div class="col s6">
              <label>First Name:</label>
              <input type="text" name="firstName"/>
            </div>
            <div class="col s6">
              <label>Last Name:</label>
              <input type="text" name="lastName"/>
            </div>
             <div class="col s6">
              <label>Email:</label>
              <input type="email" name="email"/>
            </div>
            <div class="col s6">
              <label>Date of Birth:</label>
              <input type="date" name="dob"/>
            </div>
            <div class="col s12">
              <label>zipcode:</label>
              <input type="number" name="zipcode" data-length="5" required />
            </div>

            <div class="col s12">
              <h5 class="center">gender</h5>
              <p id="form-font" class="col s4">
                <input name="gender" type="radio" value="m" id="m" />
                <label for="m">man</label>
              </p>
              <p id="form-font" class="col s4">
                <input name="gender" type="radio" value="f" id="f" />
                <label for="f">woman</label>
              </p>
              <p id="form-font" class="col s4">
                <input name="gender" type="radio" value="nb" id="nb" />
                <label for="nb">non-binary</label>
              </p>
              </div>
              <div class="col s12 center">
                <button id="form-font" class="btn black form" type="submit" value="Register">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
    <% include ../partials/footerNoUser.ejs %>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
  </body>
</html>
